
<% if @comment.errors.any? %>
    <ul>
      <% @comment.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

<%= form_with model: [@recipe, @comment] do |form| %>
  <%= form.label :text %>
  <%= form.text_area :text %>

  <%= form.label :image, 'Imagem' %>
  <%= form.file_field :image, accept: 'image/png,image/jpeg' %>

  <%= form.submit 'Enviar' %>
<% end %>